{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "hdc",
          "cmd": "hdc",
          "args": true,
          "sidecar": false
        },
        {
          "name": "hdc-local",
          "cmd": "/usr/local/bin/hdc",
          "args": true,
          "sidecar": false
        },
        {
          "name": "hdc-brew",
          "cmd": "/opt/homebrew/bin/hdc",
          "args": true,
          "sidecar": false
        },
        {
          "name": "hdc-sidecar",
          "cmd": "hdc",
          "args": true,
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "hdc",
          "cmd": "hdc",
          "args": true,
          "sidecar": false
        },
        {
          "name": "hdc-local",
          "cmd": "/usr/local/bin/hdc",
          "args": true,
          "sidecar": false
        },
        {
          "name": "hdc-brew",
          "cmd": "/opt/homebrew/bin/hdc",
          "args": true,
          "sidecar": false
        },
        {
          "name": "hdc-sidecar",
          "cmd": "hdc",
          "args": true,
          "sidecar": true
        }
      ]
    },
    "dialog:default"
  ]
}
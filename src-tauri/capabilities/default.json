{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "hdc",
          "cmd": "hdc",
          "args": true,
          "sidecar": true
        },
        {
          "name": "hdc-deveco",
          "cmd": "/Applications/DevEco-Studio.app/Contents/sdk/default/openharmony/toolchains/hdc",
          "args": true,
          "sidecar": false
        },
        {
          "name": "hdc-custom-path",
          "cmd": {
            "regex": "^/.*hdc$"
          },
          "args": true,
          "sidecar": false
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "hdc",
          "cmd": "hdc",
          "args": true,
          "sidecar": true
        },
        {
          "name": "hdc-deveco",
          "cmd": "/Applications/DevEco-Studio.app/Contents/sdk/default/openharmony/toolchains/hdc",
          "args": true,
          "sidecar": false
        },
        {
          "name": "hdc-custom-path",
          "cmd": {
            "regex": "^/.*hdc$"
          },
          "args": true,
          "sidecar": false
        }
      ]
    },
    "dialog:default"
  ]
}
{
  "identifier": "hdc-scope",
  "description": "Allow executing HDC from custom paths",
  "local": true,
  "windows": ["*"],
  "permissions": [
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "hdc-custom-path",
          "cmd": "^/.*hdc$",
          "args": true
        }
      ]
    }
  ]
}